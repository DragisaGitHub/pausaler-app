{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Paushaler",
  "version": "1.0.0",
  "identifier": "com.dstankovski.paushaler",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Paushaler",
        "width": 800,
        "height": 600,
        "decorations": false,
        "maximized": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {},
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "assets/DejaVuSans.ttf",
      "assets/data/serbia_zip_codes.json",
      "assets/public_key.pem"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
